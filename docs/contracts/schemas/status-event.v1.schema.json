{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dalevision.local/schemas/status-event.v1.json",
  "title": "DALE Vision Status Event v1",
  "type": "object",
  "oneOf": [
    { "$ref": "#/$defs/StoreStatusChanged" },
    { "$ref": "#/$defs/CameraStatusChanged" }
  ],
  "$defs": {
    "UUID": { "type": "string", "format": "uuid" },
    "ISODateTime": { "type": "string", "format": "date-time" },
    "Status": { "type": "string", "enum": ["online", "degraded", "offline", "unknown"] },
    "Counts": {
      "type": "object",
      "additionalProperties": false,
      "required": ["online", "total"],
      "properties": {
        "online": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 }
      }
    },
    "Base": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "event_type",
        "schema_version",
        "occurred_at",
        "receipt_id",
        "store_id",
        "camera_id",
        "previous_status",
        "current_status",
        "reason"
      ],
      "properties": {
        "event_type": { "type": "string", "enum": ["store_status_changed", "camera_status_changed"] },
        "schema_version": { "type": "integer", "const": 1 },
        "occurred_at": { "$ref": "#/$defs/ISODateTime" },
        "receipt_id": { "type": "string", "minLength": 10, "maxLength": 300 },

        "store_id": { "$ref": "#/$defs/UUID" },
        "camera_id": { "oneOf": [{ "$ref": "#/$defs/UUID" }, { "type": "null" }] },
        "external_id": { "oneOf": [{ "type": "string" }, { "type": "null" }], "default": null },

        "previous_status": { "$ref": "#/$defs/Status" },
        "current_status": { "$ref": "#/$defs/Status" },
        "reason": { "type": "string" },

        "age_seconds": { "oneOf": [{ "type": "integer", "minimum": 0 }, { "type": "null" }], "default": null },
        "counts": { "oneOf": [{ "$ref": "#/$defs/Counts" }, { "type": "null" }], "default": null }
      }
    },
    "StoreStatusChanged": {
      "allOf": [
        { "$ref": "#/$defs/Base" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["event_type", "counts"],
          "properties": {
            "event_type": { "const": "store_status_changed" },
            "camera_id": { "type": "null" },
            "counts": { "$ref": "#/$defs/Counts" }
          }
        }
      ]
    },
    "CameraStatusChanged": {
      "allOf": [
        { "$ref": "#/$defs/Base" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["event_type", "camera_id"],
          "properties": {
            "event_type": { "const": "camera_status_changed" },
            "camera_id": { "$ref": "#/$defs/UUID" }
          }
        }
      ]
    }
  }
}
